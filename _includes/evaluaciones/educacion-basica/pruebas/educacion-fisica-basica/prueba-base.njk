{% set esPractica = paginaPractica | default(false) %}
<div class="min-h-screen bg-gradient-to-br from-red-50 via-orange-50 to-yellow-50 py-12">
  <div class="container mx-auto px-4 max-w-4xl">
    <!-- Header -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 mb-8" data-efb-intro>
      <div class="text-center mb-6">
        <div class="inline-flex items-center space-x-3 bg-gradient-to-r from-red-600 to-orange-600 text-white px-6 py-3 rounded-full shadow-lg mb-4">
          <i class="bi bi-clipboard-check-fill text-2xl"></i>
          <h1 class="text-2xl font-bold">{{ esPractica ? 'Simulador Práctica ECEP 2025' : 'Prueba ECEP 2025' }}</h1>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Educación Física y Salud</h2>
        <p class="text-gray-600">Educación Básica (1° a 6°) - 50 Preguntas</p>
        {% if esPractica %}
          <p class="text-sm text-gray-500 mt-3">Modo práctica interactiva con retroalimentación inmediata.</p>
        {% endif %}
      </div>

      <div class="grid md:grid-cols-3 gap-4 mb-6">
        <div class="bg-red-50 p-4 rounded-lg text-center border-2 border-red-200">
          <p class="text-red-700 font-semibold text-sm mb-1">Dominio 1</p>
          <p class="text-2xl font-bold text-red-600">15</p>
          <p class="text-xs text-gray-600">Aptitud Física</p>
        </div>
        <div class="bg-green-50 p-4 rounded-lg text-center border-2 border-green-200">
          <p class="text-green-700 font-semibold text-sm mb-1">Dominio 2</p>
          <p class="text-2xl font-bold text-green-600">15</p>
          <p class="text-xs text-gray-600">Motricidad</p>
        </div>
        <div class="bg-blue-50 p-4 rounded-lg text-center border-2 border-blue-200">
          <p class="text-blue-700 font-semibold text-sm mb-1">Dominio 3</p>
          <p class="text-2xl font-bold text-blue-600">10</p>
          <p class="text-xs text-gray-600">Enseñanza</p>
        </div>
      </div>

      <div class="bg-purple-50 p-4 rounded-lg text-center border-2 border-purple-200">
        <p class="text-purple-700 font-semibold text-sm mb-1">Casos Integrados</p>
        <p class="text-2xl font-bold text-purple-600">10 preguntas</p>
        <p class="text-xs text-gray-600">2 casos pedagógicos (5 preguntas c/u)</p>
      </div>

      <div class="mt-6 text-center">
        <button onclick="comenzarPrueba()" class="bg-gradient-to-r from-red-600 to-orange-600 hover:from-red-700 hover:to-orange-700 text-white font-bold py-4 px-8 rounded-xl transition-all transform hover:scale-105 shadow-lg">
          <i class="bi bi-play-circle-fill mr-2"></i>{{ esPractica ? 'Comenzar Práctica' : 'Comenzar Prueba' }}
        </button>
      </div>
    </div>

    <!-- Prueba Container -->
    <div id="prueba-container" class="hidden">
      <div class="bg-white rounded-2xl shadow-2xl p-8 mb-6">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-xl font-bold text-gray-800">
            Pregunta <span id="pregunta-actual">1</span> de 50
          </h3>
          <div class="text-sm text-gray-600">
            <span id="dominio-actual" class="font-semibold"></span>
          </div>
        </div>

        <div id="pregunta-contenido" class="mb-6"></div>

        <div class="flex justify-between mt-8">
          <button onclick="anteriorPregunta()" id="btn-anterior" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-6 rounded-lg transition-colors" disabled>
            <i class="bi bi-arrow-left mr-2"></i>Anterior
          </button>
          <button onclick="siguientePregunta()" id="btn-siguiente" class="bg-gradient-to-r from-red-600 to-orange-600 hover:from-red-700 hover:to-orange-700 text-white font-semibold py-2 px-6 rounded-lg transition-all">
            Siguiente<i class="bi bi-arrow-right ml-2"></i>
          </button>
          <button onclick="finalizarPrueba()" id="btn-finalizar" class="hidden bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-bold py-2 px-6 rounded-lg transition-all">
            <i class="bi bi-check-circle-fill mr-2"></i>Finalizar Prueba
          </button>
        </div>
      </div>

      <!-- Barra de progreso -->
      <div class="bg-white rounded-xl shadow-lg p-4">
        <div class="flex justify-between items-center mb-2">
          <span class="text-sm font-semibold text-gray-700">Progreso</span>
          <span class="text-sm font-semibold text-gray-700"><span id="respondidas">0</span>/50</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div id="barra-progreso" class="bg-gradient-to-r from-red-500 to-orange-500 h-3 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
      </div>
    </div>

    <!-- Resultados -->
    <div id="resultados-container" class="hidden">
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <div class="text-center mb-8">
          <div class="inline-flex items-center space-x-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white px-6 py-3 rounded-full shadow-lg mb-4">
            <i class="bi bi-trophy-fill text-3xl"></i>
            <h2 class="text-2xl font-bold">Resultados</h2>
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-6 mb-8">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 p-6 rounded-xl border-2 border-blue-300">
            <p class="text-gray-700 font-semibold mb-2">Puntaje Total</p>
            <p class="text-5xl font-bold text-blue-600"><span id="puntaje-total">0</span>/50</p>
            <p class="text-sm text-gray-600 mt-2"><span id="porcentaje-total">0</span>% correctas</p>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-emerald-100 p-6 rounded-xl border-2 border-green-300">
            <p class="text-gray-700 font-semibold mb-2">Nivel Alcanzado</p>
            <p class="text-3xl font-bold text-green-600" id="nivel-texto">-</p>
            <p class="text-sm text-gray-600 mt-2" id="nivel-descripcion">-</p>
          </div>
        </div>

        <div class="space-y-4 mb-8">
          <div class="bg-red-50 p-4 rounded-lg border-l-4 border-red-500">
            <p class="font-semibold text-red-800 mb-2">Dominio 1: Aptitud Física, Salud y Bienestar</p>
            <p class="text-2xl font-bold text-red-600"><span id="dom1-correctas">0</span>/15</p>
          </div>
          <div class="bg-green-50 p-4 rounded-lg border-l-4 border-green-500">
            <p class="font-semibold text-green-800 mb-2">Dominio 2: Manifestaciones de la Motricidad</p>
            <p class="text-2xl font-bold text-green-600"><span id="dom2-correctas">0</span>/15</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-lg border-l-4 border-blue-500">
            <p class="font-semibold text-blue-800 mb-2">Dominio 3: Procesos de Enseñanza-Aprendizaje</p>
            <p class="text-2xl font-bold text-blue-600"><span id="dom3-correctas">0</span>/10</p>
          </div>
          <div class="bg-purple-50 p-4 rounded-lg border-l-4 border-purple-500">
            <p class="font-semibold text-purple-800 mb-2">Casos Pedagógicos Integrados</p>
            <p class="text-2xl font-bold text-purple-600"><span id="casos-correctas">0</span>/10</p>
          </div>
        </div>

        <div class="flex gap-4 justify-center">
          <button onclick="reiniciarPrueba()" class="bg-gradient-to-r from-red-600 to-orange-600 hover:from-red-700 hover:to-orange-700 text-white font-bold py-3 px-6 rounded-xl transition-all">
            <i class="bi bi-arrow-clockwise mr-2"></i>Reiniciar Prueba
          </button>
          <a href="/evaluaciones/educacion-basica/estudio/educacion-fisica-basica/" class="bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold py-3 px-6 rounded-xl transition-all inline-block">
            <i class="bi bi-book-fill mr-2"></i>Ver Dossier de Estudio
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/educacion-fisica-basica-preguntas.js"></script>
<script src="/js/educacion-fisica-basica-prueba.js"></script>
