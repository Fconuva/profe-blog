    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; color: #374151; }
        .main-color-text { color: #005A9C; }
        .accent-text { color: #D69E2E; }
        .accent-bg { background-color: #ECC94B; }
        .section-title { font-family: 'Montserrat', sans-serif; font-weight: 900; font-size: 2.5rem; color: #005A9C; }
        .nav-link { color: #4a5568; font-weight: 600; text-decoration: none; transition: color 0.3s; padding-bottom: 4px; border-bottom: 2px solid transparent; }
        .nav-link:hover { color: #005A9C; border-bottom-color: #ECC94B; }
        .service-card, .app-card, .feedback-card { transition: transform 0.3s, box-shadow 0.3s; }
        .service-card:hover, .app-card:hover, .feedback-card:hover { transform: translateY(-5px); box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05); }
        .hero-slide { position: absolute; width: 100%; height: 100%; background-size: cover; background-position: center; opacity: 0; transition: opacity 1s ease-in-out; }
        .hero-slide.active { opacity: 1; }
        
        .modal-backdrop { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); display: flex; justify-content: center; align-items: center; z-index: 1000; padding: 1rem; overflow-y: auto; }
        .modal-content { max-width: 900px; width: 100%; max-height: 90vh; overflow-y: auto; }
        .modal-close { font-size: 2.5rem; font-weight: bold; line-height: 1; }

        /* --- ESTILOS PARA TARJETAS CON IMAGEN --- */
        .image-card {
            position: relative;
            overflow: hidden;
            background-size: cover;
            background-position: center;
        }
        .image-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: linear-gradient(to top, rgba(0, 20, 40, 0.9), rgba(0, 20, 40, 0.4));
            z-index: 1;
            transition: background-color 0.3s ease;
        }
        .image-card:hover::before {
            background: linear-gradient(to top, rgba(0, 20, 40, 0.7), rgba(0, 20, 40, 0.2));
        }
        .image-card-content {
            position: relative;
            z-index: 2;
        }
    </style>
</head>
<body class="bg-gray-100">

    <header class="bg-white shadow-md sticky top-0 z-50">
