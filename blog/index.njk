    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; color: #374151; }
        .main-color-text { color: #005A9C; }
        .accent-text { color: #D69E2E; }
        .accent-bg { background-color: #ECC94B; }
        .section-title { font-family: 'Montserrat', sans-serif; font-weight: 900; font-size: 2.5rem; color: #005A9C; }
        .nav-link { color: #4a5568; font-weight: 600; text-decoration: none; transition: color 0.3s; padding-bottom: 4px; border-bottom: 2px solid transparent; }
        .nav-link:hover { color: #005A9C; border-bottom-color: #ECC94B; }
        .service-card, .app-card, .feedback-card { transition: transform 0.3s, box-shadow 0.3s; }
        .service-card:hover, .app-card:hover, .feedback-card:hover { transform: translateY(-5px); box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05); }
        .hero-slide { position: absolute; width: 100%; height: 100%; background-size: cover; background-position: center; opacity: 0; transition: opacity 1s ease-in-out; }
        .hero-slide.active { opacity: 1; }
    </style>
</head>
<body class="bg-gray-100">

    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold main-color-text">Profe Francisco Pancho</a>
            <div class="hidden md:flex space-x-8">
                <a href="/#sobre-mi" class="nav-link">Sobre Mí</a>
                <a href="/#servicios" class="nav-link">Servicios</a>
                <a href="/#apps" class="nav-link">Herramientas</a>
                <a href="/galeria/" class="nav-link">Galería</a> <a href="/#feedback" class="nav-link">Testimonios</a>
                <a href="/contacto/" class="nav-link">Contacto</a>
            </div>
            <div class="md:hidden">
                <button id="menu-btn" class="text-gray-800 focus:outline-none">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                </button>
            </div>
        </nav>
        <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
            <a href="/#sobre-mi" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Sobre Mí</a>
            <a href="/#servicios" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Servicios</a>
            <a href="/#apps" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Herramientas</a>
            <a href="/galeria/" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Galería</a> <a href="/#feedback" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Testimonios</a>
            <a href="/contacto/" class="block py-2 px-6 text-gray-700 hover:bg-gray-100">Contacto</a>
        </div>
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer class="bg-gray-800 text-white py-10">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; 2024 Francisco Javier Núñez Valenzuela. Todos los derechos reservados.</p>
            <p class="text-sm text-gray-400 mt-2">Sitio web diseñado y desarrollado por Francisco Núñez.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Lógica del Carrusel (Hero Slider) ---
            const slides = document.querySelectorAll('.hero-slide');
            const prevButton = document.getElementById('prev-slide');
            const nextButton = document.getElementById('next-slide');
            
            if (slides.length > 0) {
                let currentSlide = 0;
                let slideInterval;

                function showSlide(index) {
                    slides.forEach((slide, i) => {
                        slide.classList.toggle('active', i === index);
                    });
                }

                function nextSlide() {
                    currentSlide = (currentSlide + 1) % slides.length;
                    showSlide(currentSlide);
                }

                function prevSlide() {
                    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                    showSlide(currentSlide);
                }

                function startSlideShow() {
                    clearInterval(slideInterval);
                    slideInterval = setInterval(nextSlide, 5000);
                }

                if (prevButton && nextButton) {
                    prevButton.addEventListener('click', () => {
                        prevSlide();
                        startSlideShow();
                    });

                    nextButton.addEventListener('click', () => {
                        nextSlide();
                        startSlideShow();
                    });
                }
                
                showSlide(currentSlide);
                startSlideShow();
            }

            // --- Lógica del Menú Móvil ---
            const menuBtn = document.getElementById('menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            if (menuBtn) {
                menuBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

</body>
</html>
