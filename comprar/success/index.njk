<script>
// Capture URL parameters and redirect to create account page
document.getElementById('createAccountBtn').addEventListener('click', function(e) {
  e.preventDefault();
  const urlParams = new URLSearchParams(window.location.search);
  const paymentId = urlParams.get('payment_id') || urlParams.get('external_reference');
  const status = urlParams.get('status') || 'approved';
  const email = urlParams.get('email') || '';
  
  // Build redirect URL with parameters
  let redirectUrl = '/comprar/crear-cuenta.html?';
  if (paymentId) redirectUrl += `payment_id=${encodeURIComponent(paymentId)}&`;
  redirectUrl += `status=${status}&`;
  if (email) redirectUrl += `email=${encodeURIComponent(email)}`;
  
  window.location.href = redirectUrl;
});
</script>
