                      <input 
                        type="radio" 
                        name="pregunta-{{ casoNum }}" 
                        value="{{ alt.opcion }}" 
                        class="mt-1 h-5 w-5 text-amber-600 focus:ring-amber-500 border-gray-300 cursor-pointer"
                        data-question="{{ casoNum }}"
                      >
                      <span class="ml-4 text-gray-800 group-hover:text-gray-900 font-medium">
