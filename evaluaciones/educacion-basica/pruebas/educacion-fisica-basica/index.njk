let preguntaActual = 0;
let respuestas = new Array(50).fill(null);

function comenzarPrueba() {
  document.querySelector('.bg-white.rounded-2xl.shadow-2xl.p-8.mb-8').classList.add('hidden');
  document.getElementById('prueba-container').classList.remove('hidden');
  mostrarPregunta(0);
}

function mostrarPregunta(index) {
  if (index < 0 || index >= preguntas.length) return;
  
  preguntaActual = index;
  const pregunta = preguntas[index];
  
  document.getElementById('pregunta-actual').textContent = index + 1;
  document.getElementById('dominio-actual').textContent = pregunta.dominio;
  
  let html = `
    <div class="mb-6">
      <p class="text-lg text-gray-800 leading-relaxed mb-4">${pregunta.enunciado}</p>
      <div class="space-y-3">
  `;
  
  pregunta.alternativas.forEach((alt, i) => {
    const letra = String.fromCharCode(65 + i);
    const checked = respuestas[index] === i ? 'checked' : '';
    html += `
      <label class="flex items-start p-4 border-2 rounded-lg cursor-pointer transition-all hover:border-red-400 hover:bg-red-50 ${checked ? 'border-red-500 bg-red-100' : 'border-gray-200'}">
        <input type="radio" name="pregunta-${index}" value="${i}" ${checked} onchange="guardarRespuesta(${index}, ${i}); mostrarRetroalimentacion(${index})" class="mt-1 mr-3">
        <span class="flex-1"><strong>${letra})</strong> ${alt}</span>
      </label>
    `;
  });
  
  html += `
      </div>
      
      <!-- Retroalimentación desplegable -->
      <div id="retroalimentacion-${index}" class="hidden mt-6">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 rounded-lg p-5 shadow-md">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i class="bi bi-lightbulb-fill text-green-600 text-2xl"></i>
            </div>
            <div class="ml-4 flex-1">
              <h5 class="text-lg font-bold text-green-800 mb-3">
                <i class="bi bi-check-circle-fill mr-2"></i>Respuesta Correcta: ${String.fromCharCode(65 + pregunta.correcta)}
              </h5>
              <div class="text-gray-800 leading-relaxed" style="white-space: pre-line;">${pregunta.explicacion}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  `;
  
  document.getElementById('pregunta-contenido').innerHTML = html;
  
  // Si ya hay respuesta guardada, mostrar retroalimentación automáticamente
  if (respuestas[index] !== null) {
    setTimeout(() => mostrarRetroalimentacion(index), 100);
  }
  
  // Actualizar botones
  document.getElementById('btn-anterior').disabled = index === 0;
  document.getElementById('btn-siguiente').classList.toggle('hidden', index === 49);
  document.getElementById('btn-finalizar').classList.toggle('hidden', index !== 49);
  
  actualizarProgreso();
}

function mostrarRetroalimentacion(index) {
  const retroElement = document.getElementById(`retroalimentacion-${index}`);
  if (retroElement && respuestas[index] !== null) {
    retroElement.classList.remove('hidden');
    // Scroll suave hasta la retroalimentación
    retroElement.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
}

function guardarRespuesta(index, respuesta) {
  respuestas[index] = respuesta;
  actualizarProgreso();
}

function actualizarProgreso() {
  const respondidas = respuestas.filter(r => r !== null).length;
  document.getElementById('respondidas').textContent = respondidas;
  document.getElementById('barra-progreso').style.width = (respondidas / 50 * 100) + '%';
}

function anteriorPregunta() {
  if (preguntaActual > 0) {
    mostrarPregunta(preguntaActual - 1);
  }
}

function siguientePregunta() {
  if (preguntaActual < 49) {
    mostrarPregunta(preguntaActual + 1);
  }
}

function finalizarPrueba() {
  if (confirm('¿Estás seguro de finalizar la prueba? Se mostrarán los resultados.')) {
    calcularResultados();
  }
}

function calcularResultados() {
  let correctas = 0;
  let dom1 = 0, dom2 = 0, dom3 = 0, casos = 0;
  
  preguntas.forEach((p, i) => {
    if (respuestas[i] === p.correcta) {
      correctas++;
      if (i < 15) dom1++;
      else if (i < 30) dom2++;
      else if (i < 40) dom3++;
      else casos++;
    }
  });
  
  const porcentaje = Math.round((correctas / 50) * 100);
  
  document.getElementById('puntaje-total').textContent = correctas;
  document.getElementById('porcentaje-total').textContent = porcentaje;
  document.getElementById('dom1-correctas').textContent = dom1;
  document.getElementById('dom2-correctas').textContent = dom2;
  document.getElementById('dom3-correctas').textContent = dom3;
  document.getElementById('casos-correctas').textContent = casos;
  
  let nivel = '';
  let descripcion = '';
  if (porcentaje >= 80) {
    nivel = 'Excelente';
    descripcion = 'Dominio avanzado de contenidos ECEP';
  } else if (porcentaje >= 60) {
    nivel = 'Bueno';
    descripcion = 'Conocimientos sólidos, revisar áreas débiles';
  } else if (porcentaje >= 40) {
    nivel = 'Suficiente';
    descripcion = 'Reforzar contenidos de todos los dominios';
  } else {
    nivel = 'Insuficiente';
    descripcion = 'Requiere estudio profundo del dossier';
  }
  
  document.getElementById('nivel-texto').textContent = nivel;
  document.getElementById('nivel-descripcion').textContent = descripcion;
  
  document.getElementById('prueba-container').classList.add('hidden');
  document.getElementById('resultados-container').classList.remove('hidden');
}

function reiniciarPrueba() {
  respuestas = new Array(50).fill(null);
  preguntaActual = 0;
  document.getElementById('resultados-container').classList.add('hidden');
  document.getElementById('prueba-container').classList.remove('hidden');
  mostrarPregunta(0);
}
</script>
