        opt.classList.add('correct');
      }
    });
  }
  
  answeredQuestions++;
  
  // Mostrar resultado final
  if (answeredQuestions === 5) {
    setTimeout(() => {
      document.getElementById('quiz-result').classList.remove('hidden');
      document.getElementById('quiz-score').textContent = correctAnswers + '/5';
