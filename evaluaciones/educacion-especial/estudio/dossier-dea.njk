  const preguntas = casoContainer.querySelectorAll('.caso-pregunta[data-caso^="' + casoNum + '-"]');
  let correctas = 0;
  let respondidas = 0;
  
  preguntas.forEach(p => {
    const feedback = p.querySelector('.caso-feedback');
    if (feedback.classList.contains('show')) {
      respondidas++;
      if (feedback.classList.contains('correct')) {
        correctas++;
      }
    }
  });
  
  // Solo contar las que tienen opciones (no las abiertas)
  const preguntasConOpciones = casoContainer.querySelectorAll('.caso-pregunta .caso-opciones');
  const total = preguntasConOpciones.length;
  
  if (respondidas > 0) {
    scoreEl.textContent = correctas + '/' + total;
  }
}
