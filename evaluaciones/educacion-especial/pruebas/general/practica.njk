        async function consultarIA(questionId) {
            const iaBox = document.getElementById(`ia-feedback-${questionId}`);
            const iaBtn = document.getElementById(`ia-btn-${questionId}`);
            
            const data = await loadPlan();
            const pregunta = Object.values(data.preguntas).flat().find(q => q.id === questionId);
            
            if (!pregunta) {
                console.error('Pregunta no encontrada:', questionId);
                return;
            }

            iaBtn.disabled = true;
            iaBtn.textContent = '‚è≥ Consultando IA...';
            
            iaBox.innerHTML = `
