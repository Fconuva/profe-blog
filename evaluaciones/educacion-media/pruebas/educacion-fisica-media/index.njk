<script>
// Cargar datos del plan.json
let planData = null;
let respuestas = {};
let estadisticas = {
  correctas: 0,
  incorrectas: 0,
  porDominio: {}
};

// Cargar plan.json
fetch('/evaluaciones/educacion-media/pruebas/educacion-fisica-media/plan.json')
  .then(response => response.json())
  .then(data => {
    planData = data;
    inicializarEstadisticas();
    renderizarPreguntas();
    configurarEventListeners();
  })
  .catch(error => {
    console.error('Error cargando plan.json:', error);
    document.getElementById('preguntas-container').innerHTML = '<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">Error al cargar las preguntas. Por favor, recarga la p√°gina.</div>';
  });

function inicializarEstadisticas() {
  planData.domains.forEach(domain => {
    estadisticas.porDominio[domain.id] = {
      nombre: domain.name,
      correctas: 0,
      total: domain.questions
    };
  });
}

function renderizarPreguntas() {
  const container = document.getElementById('preguntas-container');
  let html = '';

  planData.questions.forEach((pregunta, index) => {
    const dominio = planData.domains.find(d => d.id === pregunta.domain);
    const numeroPregunta = index + 1;

    html += `
      <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow p-8" data-id="ef-${pregunta.id}">
        <div class="mb-6 flex justify-between items-start flex-wrap gap-3">
          <div class="flex flex-wrap gap-3">
            <span class="bg-pink-100 text-pink-800 px-4 py-2 rounded-full text-sm font-bold">Pregunta ${numeroPregunta}</span>
            <span class="bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm">${dominio.name}</span>
            ${pregunta.difficulty ? `<span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs">${getDifficultyLabel(pregunta.difficulty)}</span>` : ''}
          </div>
          <button type="button" class="consultar-ia-btn bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white px-5 py-2 rounded-lg text-sm font-semibold transition-all shadow-md hover:shadow-lg flex items-center" data-pregunta="${numeroPregunta}" data-dominio="${dominio.name}">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
            </svg>
            Consultar IA
          </button>
        </div>
        
        ${pregunta.imageUrl ? `
          <div class="mb-6">
            <img src="${pregunta.imageUrl}" alt="Imagen de la pregunta ${numeroPregunta}" class="max-w-full h-auto rounded-lg shadow-md border-2 border-gray-200 mx-auto" style="max-width: 600px;">
          </div>
        ` : ''}
        
        <p class="text-xl text-gray-800 mb-6 leading-relaxed">${pregunta.question}</p>
        
        <div class="space-y-3">
          ${pregunta.options.map((opcion, i) => `
            <label class="flex items-start p-4 border-2 border-gray-200 rounded-xl hover:border-pink-400 hover:bg-pink-50 cursor-pointer transition-all group">
              <input type="radio" name="q${pregunta.id}" value="${i}" data-correct="${pregunta.correctAnswer}" data-domain="${pregunta.domain}" class="mt-1.5 w-5 h-5 text-pink-600 focus:ring-pink-500">
              <span class="ml-4 text-lg group-hover:text-pink-700"><strong class="font-bold">${String.fromCharCode(65 + i)}.</strong> ${opcion}</span>
            </label>
          `).join('')}
        </div>
        
        <!-- Feedback area -->
        <div class="feedback hidden mt-6 p-6 rounded-xl border-2">
          <p class="font-bold mb-3 text-lg feedback-title"></p>
          <p class="text-gray-700 leading-relaxed">${pregunta.explanation}</p>
        </div>
        
        <!-- IA Response area -->
        <div class="ia-response hidden mt-6 p-6 rounded-xl bg-gradient-to-br from-purple-50 to-pink-50 border-2 border-purple-200">
          <div class="flex items-start">
