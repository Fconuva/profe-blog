              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            <div class="flex-1">
              <h4 class="font-bold text-purple-800 mb-2 text-lg">ü§ñ Asistente IA - Educaci√≥n F√≠sica</h4>
              <div class="ia-content text-gray-700"></div>
            </div>
          </div>
        </div>
      </div>
    `;
  });

  container.innerHTML = html;
}

function getDifficultyLabel(difficulty) {
  const labels = {
    'easy': 'üü¢ F√°cil',
    'medium': 'üü° Medio',
    'hard': 'üî¥ Dif√≠cil'
  };
  return labels[difficulty] || difficulty;
}

function configurarEventListeners() {
  // Evento para mostrar feedback inmediato
  document.querySelectorAll('input[type="radio"]').forEach(radio => {
    radio.addEventListener('change', function() {
      const preguntaId = this.name.replace('q', '');
      const respuestaSeleccionada = parseInt(this.value);
      const respuestaCorrecta = parseInt(this.getAttribute('data-correct'));
      const dominio = this.getAttribute('data-domain');
      const preguntaDiv = this.closest('[data-id]');
      const feedbackDiv = preguntaDiv.querySelector('.feedback');

      // Guardar respuesta
      if (!respuestas[preguntaId]) {
        respuestas[preguntaId] = {
          seleccionada: respuestaSeleccionada,
          correcta: respuestaCorrecta,
          dominio: dominio,
          esCorrecta: respuestaSeleccionada === respuestaCorrecta
        };

        // Actualizar estad√≠sticas
        if (respuestaSeleccionada === respuestaCorrecta) {
          estadisticas.correctas++;
          estadisticas.porDominio[dominio].correctas++;
        } else {
          estadisticas.incorrectas++;
        }

        actualizarProgreso();
      }

      // Mostrar feedback
      mostrarFeedback(feedbackDiv, respuestaSeleccionada === respuestaCorrecta);

      // Verificar si complet√≥ todas las preguntas
      if (Object.keys(respuestas).length === planData.questions.length) {
        setTimeout(mostrarResultadosFinales, 1000);
      }
    });
  });

  // Eventos para botones de IA
  document.querySelectorAll('.consultar-ia-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const numeroPregunta = this.getAttribute('data-pregunta');
      const dominio = this.getAttribute('data-dominio');
      const preguntaDiv = this.closest('[data-id]');
      const iaResponseDiv = preguntaDiv.querySelector('.ia-response');

      consultarIA(numeroPregunta, dominio, iaResponseDiv);
    });
  });
}

function mostrarFeedback(feedbackDiv, esCorrecto) {
  const titleEl = feedbackDiv.querySelector('.feedback-title');
  
  if (esCorrecto) {
    feedbackDiv.className = 'feedback mt-6 p-6 rounded-xl border-2 border-green-300 bg-green-50';
    titleEl.className = 'font-bold mb-3 text-lg feedback-title text-green-800';
    titleEl.innerHTML = '‚úÖ ¬°Correcto! Excelente';
  } else {
    feedbackDiv.className = 'feedback mt-6 p-6 rounded-xl border-2 border-red-300 bg-red-50';
    titleEl.className = 'font-bold mb-3 text-lg feedback-title text-red-800';
    titleEl.innerHTML = '‚ùå Incorrecto - Revisa la explicaci√≥n';
  }
  
  feedbackDiv.classList.remove('hidden');
}

function actualizarProgreso() {
  const total = planData.questions.length;
  const completadas = Object.keys(respuestas).length;
  const porcentaje = (completadas / total) * 100;

  document.getElementById('respuestas-completadas').textContent = completadas;
  document.getElementById('respuestas-correctas').textContent = estadisticas.correctas;
  document.getElementById('respuestas-incorrectas').textContent = estadisticas.incorrectas;
  document.getElementById('barra-progreso').style.width = porcentaje + '%';
}

function mostrarResultadosFinales() {
  const total = planData.questions.length;
  const correctas = estadisticas.correctas;
  const incorrectas = estadisticas.incorrectas;
  const porcentajeCorrectas = ((correctas / total) * 100).toFixed(1);
  const porcentajeIncorrectas = ((incorrectas / total) * 100).toFixed(1);

  // Calcular nota (escala 1.0-7.0, 60% = 4.0)
  let nota;
  if (porcentajeCorrectas < 60) {
    nota = 1.0 + ((porcentajeCorrectas / 60) * 3.0);
  } else {
    nota = 4.0 + (((porcentajeCorrectas - 60) / 40) * 3.0);
  }
  nota = Math.max(1.0, Math.min(7.0, nota)).toFixed(1);

  // Actualizar valores
  document.getElementById('final-correctas').textContent = correctas;
  document.getElementById('final-incorrectas').textContent = incorrectas;
  document.getElementById('porcentaje-correctas').textContent = porcentajeCorrectas;
  document.getElementById('porcentaje-incorrectas').textContent = porcentajeIncorrectas;
  document.getElementById('nota-final').textContent = nota;

  // Resultados por dominio
  let htmlDominios = '';
  Object.values(estadisticas.porDominio).forEach(dominio => {
    const porcentajeDominio = ((dominio.correctas / dominio.total) * 100).toFixed(1);
    const colorClass = porcentajeDominio >= 60 ? 'green' : 'red';

    htmlDominios += `
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="flex justify-between items-center mb-2">
          <h4 class="font-bold text-gray-800">${dominio.nombre}</h4>
          <span class="text-${colorClass}-600 font-bold">${dominio.correctas}/${dominio.total} (${porcentajeDominio}%)</span>
        </div>
        <div class="bg-gray-200 rounded-full h-2">
          <div class="bg-${colorClass}-500 h-2 rounded-full" style="width: ${porcentajeDominio}%"></div>
        </div>
      </div>
    `;
  });

  document.getElementById('resultados-por-dominio').innerHTML = htmlDominios;
  document.getElementById('resultados-finales').classList.remove('hidden');
  
  // Scroll to results
  document.getElementById('resultados-finales').scrollIntoView({ behavior: 'smooth', block: 'start' });
}

async function consultarIA(numeroPregunta, dominio, iaResponseDiv) {
  const iaContent = iaResponseDiv.querySelector('.ia-content');
  
  // Mostrar loading
  iaResponseDiv.classList.remove('hidden');
  iaContent.innerHTML = `
    <div class="flex items-center">
      <svg class="animate-spin h-5 w-5 text-purple-600 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Consultando al asistente IA...
    </div>
  `;

  try {
    const pregunta = planData.questions[numeroPregunta - 1];
    
    const response = await fetch('/api/groq-feedback', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        pregunta: pregunta.question,
        dominio: dominio,
        tipo: 'explicacion_educacion_fisica',
        contexto: {
          opciones: pregunta.options,
          respuestaCorrecta: pregunta.options[pregunta.correctAnswer],
          explicacion: pregunta.explanation
        }
      })
    });

    if (!response.ok) {
      throw new Error('Error en la respuesta del servidor');
    }

    const data = await response.json();
    
    iaContent.innerHTML = `
      <div class="prose max-w-none">
        <p class="whitespace-pre-wrap">${data.respuesta || data.message || 'No se pudo obtener respuesta'}</p>
      </div>
    `;
  } catch (error) {
    console.error('Error consultando IA:', error);
    iaContent.innerHTML = `
      <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded">
        <p class="font-bold">Error al consultar IA</p>
        <p class="text-sm mt-1">Por favor, intenta nuevamente. Si el problema persiste, revisa la explicaci√≥n de la pregunta.</p>
      </div>
    `;
  }
}
</script>
