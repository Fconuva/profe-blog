let currentQuestion = 0;
let userAnswers = new Array(quizData.preguntas.length).fill(null);

function renderResource(recurso) {
  if (!recurso) return '';
  
  let html = `<div class="card mb-4 border-0 bg-light"><div class="card-body">`;
  html += `<h6 class="card-subtitle mb-2 text-muted text-uppercase small fw-bold"><i class="bi bi-eye"></i> ${recurso.titulo}</h6>`;
  
  if (recurso.tipo === 'texto' || recurso.tipo === 'noticia') {
    html += `<div class="p-3 bg-white border rounded fst-italic font-monospace" style="font-size: 0.95rem; border-left: 4px solid #0d6efd !important;">${recurso.contenido}</div>`;
  } 
  else if (recurso.tipo === 'imagen') {
    html += `<div class="text-center"><img src="${recurso.contenido}" class="img-fluid rounded shadow-sm border" alt="${recurso.titulo}" style="max-height: 400px;"></div>`;
  }
  else if (recurso.tipo === 'tabla') {
    html += `<div class="table-responsive bg-white rounded p-2"><table class="table table-sm table-bordered table-hover mb-0 text-center">`;
    html += `<thead class="table-light"><tr>`;
    recurso.contenido[0].forEach(h => html += `<th>${h}</th>`);
    html += `</tr></thead><tbody>`;
    for(let i=1; i<recurso.contenido.length; i++) {
      html += `<tr>`;
      recurso.contenido[i].forEach(d => html += `<td>${d}</td>`);
      html += `</tr>`;
    }
    html += `</tbody></table></div>`;
  }
  else if (recurso.tipo === 'poster') {
    html += `
      <div class="bg-dark text-white p-4 text-center rounded d-flex flex-column justify-content-center align-items-center" style="min-height: 200px; background: linear-gradient(45deg, #1a1a1a, #2c3e50);">
        <h3 class="fw-bold text-warning mb-3">${recurso.contenido.titulo}</h3>
        <p class="lead mb-3">${recurso.contenido.texto}</p>
        <div class="mt-2"><span class="badge bg-success rounded-pill px-3 py-2">FIRMA AQUÍ</span></div>
      </div>
    `;
  }
  
  html += `</div></div>`;
  return html;
}

function renderQuestion() {
  const container = document.getElementById('quiz-container');
  const pregunta = quizData.preguntas[currentQuestion];
  
  // Renderizar Recurso
  const recursoHTML = renderResource(pregunta.recurso);
  
  // Si ya respondió
  if (userAnswers[currentQuestion] !== null) {
    const index = userAnswers[currentQuestion];
    const isCorrect = index === pregunta.correcta;
    
    let html = `
      <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="badge bg-primary rounded-pill">${pregunta.dominio}</span>
        <span class="text-muted small">Pregunta ${currentQuestion + 1} de ${quizData.preguntas.length}</span>
      </div>
      
      ${recursoHTML}
      
      <h5 class="mb-4 fw-bold">${pregunta.enunciado}</h5>
      <div class="alternativas-container">
    `;
    
    pregunta.alternativas.forEach((alt, i) => {
      const esCorrecta = i === pregunta.correcta;
      const esSeleccionada = i === index;
      let clase = 'p-3 mb-2 rounded border position-relative ';
      
      if (esCorrecta) {
        clase += 'bg-success-subtle border-success text-success-emphasis fw-bold';
      } else if (esSeleccionada) {
        clase += 'bg-danger-subtle border-danger text-danger-emphasis';
      } else {
        clase += 'bg-light border-light text-muted opacity-75';
      }
      
      html += `
        <div class="${clase}">
          <div class="d-flex">
            <div class="me-2 fw-bold">${String.fromCharCode(65 + i)}.</div>
            <div>${alt}</div>
          </div>
          ${esCorrecta ? '<i class="bi bi-check-circle-fill position-absolute top-50 end-0 translate-middle-y me-3 fs-5"></i>' : ''}
          ${esSeleccionada && !esCorrecta ? '<i class="bi bi-x-circle-fill position-absolute top-50 end-0 translate-middle-y me-3 fs-5"></i>' : ''}
        </div>
      `;
    });
    
    html += `
      </div>
      <div class="alert ${isCorrect ? 'alert-success' : 'alert-danger'} mt-4 shadow-sm border-0">
        <h6 class="alert-heading fw-bold">
          ${isCorrect ? '<i class="bi bi-check-circle-fill"></i> ¡Excelente!' : '<i class="bi bi-exclamation-triangle-fill"></i> Respuesta Incorrecta'}
        </h6>
        <hr>
        <p class="mb-0 small">${pregunta.explicacion}</p>
      </div>
    `;
    
    container.innerHTML = html;
  } else {
    // Sin responder
    let html = `
      <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="badge bg-primary rounded-pill">${pregunta.dominio}</span>
        <span class="text-muted small">Pregunta ${currentQuestion + 1} de ${quizData.preguntas.length}</span>
      </div>
      
      ${recursoHTML}
      
      <h5 class="mb-4 fw-bold">${pregunta.enunciado}</h5>
      <div class="alternativas-container">
    `;
    
    pregunta.alternativas.forEach((alt, index) => {
      html += `
        <div class="alternativa-item p-3 mb-2 rounded border shadow-sm d-flex align-items-center" onclick="selectAnswer(${index})">
          <div class="badge bg-light text-dark border me-3 rounded-circle p-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">${String.fromCharCode(65 + index)}</div>
          <div class="flex-grow-1">${alt}</div>
        </div>
      `;
    });
    
    html += `</div>`;
    container.innerHTML = html;
  }
  
  updateNavigation();
  renderNavigation();
}

function selectAnswer(index) {
  if (userAnswers[currentQuestion] !== null) return;
  userAnswers[currentQuestion] = index;
  renderQuestion();
}

function goToQuestion(index) {
  currentQuestion = index;
  renderQuestion();
}

function renderNavigation() {
  const navContainer = document.getElementById('question-nav');
  let html = '';
  
  quizData.preguntas.forEach((_, index) => {
    let btnClass = 'btn btn-sm ';
    if (index === currentQuestion) {
      btnClass += 'btn-primary fw-bold border-2 border-dark'; // Actual
    } else if (userAnswers[index] !== null) {
      btnClass += 'btn-success text-white'; // Respondida
    } else {
      btnClass += 'btn-outline-secondary bg-white'; // Sin responder
    }
    
    html += `<button onclick="goToQuestion(${index})" class="${btnClass}" style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center;">${index + 1}</button>`;
  });
  
  navContainer.innerHTML = html;
}

function updateNavigation() {
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const counter = document.getElementById('question-counter');
  const finishContainer = document.getElementById('finish-container');
  
  prevBtn.disabled = currentQuestion === 0;
  counter.textContent = `${currentQuestion + 1} / ${quizData.preguntas.length}`;
  
  if (currentQuestion === quizData.preguntas.length - 1) {
    nextBtn.style.display = 'none';
    finishContainer.style.display = 'block';
  } else {
    nextBtn.style.display = 'block';
    finishContainer.style.display = 'none';
  }
}

document.getElementById('prev-btn').addEventListener('click', () => {
  if (currentQuestion > 0) {
    currentQuestion--;
    renderQuestion();
  }
});

document.getElementById('next-btn').addEventListener('click', () => {
  if (currentQuestion < quizData.preguntas.length - 1) {
    currentQuestion++;
    renderQuestion();
  }
});

document.getElementById('finish-btn').addEventListener('click', showResults);

function showResults() {
  let correctas = 0;
  quizData.preguntas.forEach((p, i) => {
    if (userAnswers[i] === p.correcta) correctas++;
  });
  
  const porcentaje = Math.round((correctas / quizData.preguntas.length) * 100);
  
  let html = `
    <div class="text-center mb-5">
      <h2 class="display-4 fw-bold ${porcentaje >= 60 ? 'text-success' : 'text-danger'}">${porcentaje}%</h2>
      <p class="lead">Obtuviste ${correctas} de ${quizData.preguntas.length} respuestas correctas</p>
      <div class="progress" style="height: 10px;">
        <div class="progress-bar ${porcentaje >= 60 ? 'bg-success' : 'bg-danger'}" role="progressbar" style="width: ${porcentaje}%"></div>
      </div>
    </div>
    
    <h4 class="mb-4">Revisión de Respuestas</h4>
  `;
  
  quizData.preguntas.forEach((p, i) => {
    const userAns = userAnswers[i];
    const isCorrect = userAns === p.correcta;
    
    html += `
      <div class="card mb-3 border-${isCorrect ? 'success' : 'danger'}">
        <div class="card-header ${isCorrect ? 'bg-success text-white' : 'bg-danger text-white'} d-flex justify-content-between">
          <span>Pregunta ${i + 1}</span>
          <span>${isCorrect ? 'Correcta' : 'Incorrecta'}</span>
        </div>
        <div class="card-body">
          <p class="fw-bold">${p.enunciado}</p>
          <p class="small text-muted">Tu respuesta: ${userAns !== null ? p.alternativas[userAns] : 'Sin responder'}</p>
          <p class="small text-success fw-bold">Correcta: ${p.alternativas[p.correcta]}</p>
          <div class="alert alert-light border mt-2 small">
            <i class="bi bi-info-circle"></i> ${p.explicacion}
          </div>
        </div>
      </div>
    `;
  });
  
  html += `
    <div class="text-center mt-4">
      <button onclick="location.reload()" class="btn btn-primary btn-lg">
        <i class="bi bi-arrow-clockwise"></i> Intentar Nuevamente
      </button>
    </div>
  `;
  
  document.getElementById('results-container').innerHTML = html;
  document.getElementById('results-container').style.display = 'block';
  document.getElementById('quiz-container').style.display = 'none';
  document.querySelector('.d-flex.justify-content-between').style.display = 'none'; // Hide prev/next
  document.querySelector('.card.mb-5.border-0.bg-light').style.display = 'none'; // Hide nav grid
  document.getElementById('finish-container').style.display = 'none';
  window.scrollTo(0,0);
}

// Iniciar
renderQuestion();
