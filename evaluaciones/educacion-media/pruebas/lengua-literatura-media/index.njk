        <label id="label-alt${index}" for="alt${index}" class="flex items-start p-4 border-2 rounded-lg cursor-pointer transition-all
                      ${seleccionada ? 'border-purple-500 bg-purple-50' : 'border-gray-200 hover:border-purple-300 hover:bg-gray-50'}">
          <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full font-bold mr-3
                       ${seleccionada ? 'bg-purple-500 text-white' : 'bg-gray-200 text-gray-600'}">
            ${letra}
          </span>
          <span class="text-gray-700 flex-1">${alt}</span>
        </label>
      </div>
    `;
  });
  
  html += `
      </div>
    </div>
  `;
  
  // Mostrar retroalimentación si ya respondió
  if (respuestasUsuario[indicePreguntaActual] !== null) {
    const esCorrecta = respuestasUsuario[indicePreguntaActual] === pregunta.correcta;
    html += `
      <div class="mt-6 p-6 rounded-xl border-2 ${esCorrecta ? 'bg-green-50 border-green-300' : 'bg-red-50 border-red-300'}">
        <div class="flex items-start mb-3">
          <i class="bi ${esCorrecta ? 'bi-check-circle-fill text-green-600' : 'bi-x-circle-fill text-red-600'} text-2xl mr-3"></i>
          <div>
            <p class="font-bold ${esCorrecta ? 'text-green-800' : 'text-red-800'} text-lg mb-2">
              ${esCorrecta ? '¡Respuesta Correcta!' : 'Respuesta Incorrecta'}
            </p>
            <p class="text-gray-700 leading-relaxed">${pregunta.explicacion}</p>
            ${!esCorrecta ? `<p class="mt-3 text-sm text-gray-600"><strong>Respuesta correcta:</strong> ${String.fromCharCode(65 + pregunta.correcta)}) ${pregunta.alternativas[pregunta.correcta]}</p>` : ''}
          </div>
        </div>
      </div>
    `;
  }
  
  const cont = document.getElementById('pregunta-contenido');
  cont.innerHTML = html;
  // Foco accesible en primera alternativa
  setTimeout(() => {
    const first = cont.querySelector('input[type=radio]');
    if (first) first.focus();
  }, 50);
  
  // Actualizar botones
  document.getElementById('btn-anterior').disabled = indicePreguntaActual === 0;
  if (indicePreguntaActual === preguntas.length - 1) {
    document.getElementById('btn-siguiente').classList.add('hidden');
    document.getElementById('btn-finalizar').classList.remove('hidden');
  } else {
    document.getElementById('btn-siguiente').classList.remove('hidden');
    document.getElementById('btn-finalizar').classList.add('hidden');
  }
  
  actualizarProgreso();
}

function seleccionarRespuesta(index) {
  respuestasUsuario[indicePreguntaActual] = index;
  setTimeout(() => {
    mostrarPregunta();
    document.getElementById('pregunta-contenido').scrollIntoView({ behavior: 'smooth', block: 'start' });
  }, 300);
}

function anteriorPregunta() {
  if (indicePreguntaActual > 0) {
    indicePreguntaActual--;
    mostrarPregunta();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
}

function siguientePregunta() {
  if (indicePreguntaActual < preguntas.length - 1) {
    indicePreguntaActual++;
    mostrarPregunta();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
}

function actualizarProgreso() {
  const respondidas = respuestasUsuario.filter(r => r !== null).length;
  document.getElementById('respondidas').textContent = respondidas;
  const porcentaje = (respondidas / preguntas.length) * 100;
  document.getElementById('barra-progreso').style.width = porcentaje + '%';
}

function finalizarPrueba() {
  const respondidas = respuestasUsuario.filter(r => r !== null).length;
  if (respondidas < preguntas.length) {
    if (!confirm(`Has respondido ${respondidas} de ${preguntas.length} preguntas. ¿Deseas finalizar de todas formas?`)) {
      return;
    }
  }
  
  calcularResultados();
  document.getElementById('prueba-container').classList.add('hidden');
  document.getElementById('resultados-container').classList.remove('hidden');
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

function calcularResultados() {
  let correctas = 0;
  let dom1 = 0; // Lectura (1-18)
  let dom2 = 0; // Escritura (19-40)
  let dom3 = 0; // Enseñanza (41-50)
  
  preguntas.forEach((pregunta, index) => {
    if (respuestasUsuario[index] === pregunta.correcta) {
      correctas++;
      if (index < 18) dom1++;
      else if (index < 40) dom2++;
      else dom3++;
    }
  });
  
  const porcentaje = Math.round((correctas / preguntas.length) * 100);
  
  document.getElementById('puntaje-total').textContent = correctas;
  document.getElementById('porcentaje-total').textContent = porcentaje;
  document.getElementById('dom1-correctas').textContent = dom1;
  document.getElementById('dom2-correctas').textContent = dom2;
  document.getElementById('dom3-correctas').textContent = dom3;
  
  let nivel, descripcion;
  if (porcentaje >= 90) {
    nivel = 'Excelente';
    descripcion = 'Dominio sobresaliente del temario ECEP 2025';
  } else if (porcentaje >= 75) {
    nivel = 'Muy Bueno';
    descripcion = 'Sólido conocimiento de los contenidos';
  } else if (porcentaje >= 60) {
    nivel = 'Bueno';
    descripcion = 'Conocimiento adecuado con áreas de mejora';
  } else if (porcentaje >= 40) {
    nivel = 'Suficiente';
    descripcion = 'Requiere reforzar varios contenidos';
  } else {
    nivel = 'Insuficiente';
    descripcion = 'Se recomienda estudiar el dossier completo';
  }
  
  document.getElementById('nivel-texto').textContent = nivel;
  document.getElementById('nivel-descripcion').textContent = descripcion;
}

function reiniciarPrueba() {
  indicePreguntaActual = 0;
  respuestasUsuario = new Array(preguntas.length).fill(null);
  document.getElementById('resultados-container').classList.add('hidden');
  document.querySelector('.bg-white.rounded-2xl.shadow-2xl.p-8.mb-8').classList.remove('hidden');
}

