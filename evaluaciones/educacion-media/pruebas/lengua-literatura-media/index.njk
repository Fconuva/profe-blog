}

// Inicializar al cargar la página
document.addEventListener('DOMContentLoaded', function() {
  console.log('Prueba de Lengua y Literatura cargada');
  console.log('Total de preguntas:', preguntas.length);
  
  // Verificar si hay sesión válida
  const session = localStorage.getItem('evaluaciones_session');
  if (!session) {
    // Mostrar advertencia pero permitir acceso para desarrollo
    const warningDiv = document.createElement('div');
    warningDiv.className = 'bg-yellow-100 border-l-4 border-yellow-500 p-4 mb-6';
    warningDiv.innerHTML = `
      <div class="flex items-center">
        <i class="bi bi-exclamation-triangle text-yellow-700 mr-3"></i>
        <div>
          <p class="text-yellow-800 font-semibold">Modo Desarrollo</p>
          <p class="text-yellow-700 text-sm">Accediendo sin sesión válida. Para acceso completo, inicia sesión en /evaluaciones/</p>
        </div>
      </div>
    `;
    document.querySelector('.min-h-screen > .container').prepend(warningDiv);
    return;
  }
  
  // Verificar permisos para Educación Media
  try {
    const sessionData = JSON.parse(session);
    const permissions = sessionData.permissions || {};
    if (!permissions.media) {
      document.querySelector('.min-h-screen').innerHTML = `
        <div class="container mx-auto px-4 max-w-4xl py-12">
          <div class="bg-white rounded-2xl shadow-2xl p-8 text-center">
            <i class="bi bi-exclamation-triangle text-6xl text-yellow-500 mb-4"></i>
            <h1 class="text-3xl font-bold text-gray-800 mb-4">Permisos Insuficientes</h1>
            <p class="text-gray-600 mb-6">No tienes permisos para acceder a evaluaciones de Educación Media.</p>
            <a href="/evaluaciones/" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
              <i class="bi bi-arrow-left mr-2"></i> Volver
            </a>
          </div>
        </div>
      `;
      return;
    }
  } catch (error) {
    console.error('Error verificando sesión:', error);
    localStorage.removeItem('evaluaciones_session');
    window.location.href = '/evaluaciones/';
    return;
  }
});
