<script>
  const JSON_URL = "/evaluaciones/educacion-media/pruebas/lengua-literatura-media/em-l-23-1-1-extraccion/preguntas_sin_alternativas.json";
  const IMAGE_BASE = "/evaluaciones/educacion-media/pruebas/lengua-literatura-media/imagenes/em-l-23-1-1/";

  async function cargarPreguntas() {
    const cont = document.getElementById('contenedor-preguntas');
    cont.innerHTML = `<div class="text-center text-gray-600">Cargando preguntas...</div>`;
    try {
      const resp = await fetch(JSON_URL);
      if (!resp.ok) throw new Error('No se pudo cargar el JSON');
      const data = await resp.json();
      renderPreguntas(data);
    } catch (err) {
      cont.innerHTML = `<div class="text-center text-red-600">Error al cargar preguntas: ${err.message}</div>`;
    }
  }

  function renderPreguntas(lista) {
    const cont = document.getElementById('contenedor-preguntas');
    if (!Array.isArray(lista) || !lista.length) {
      cont.innerHTML = `<div class="text-center text-gray-600">No se encontraron preguntas.</div>`;
      return;
    }

    const cards = lista.map(q => {
      const imgs = (q.imagenes || []).map(path => {
        const filename = path.split('/').pop();
        const src = IMAGE_BASE + filename;
        return `<img src="${src}" alt="Pregunta ${q.numero}" class="w-full rounded-lg border" loading="lazy">`;
      }).join('\n');

      const paginas = (q.paginas || []).join(', ');
      const pres = q.presentacion_recomendada || 'imagen+y_enunciado';
      const nota = q.nota_redundancia || '';
      const enun = (q.enunciado || '').replace(/\n/g, '<br>');
      const contexto = (q.contexto || '').replace(/\n/g, '<br>');

      return `
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-3">
            <div class="text-sm text-gray-600">Pregunta ${q.numero}${paginas ? ` · páginas: ${paginas}` : ''}</div>
            <span class="px-3 py-1 text-xs rounded-full bg-purple-100 text-purple-700">${pres}</span>
          </div>
          <div class="space-y-3">
            ${imgs}
            <div>
              <p class="text-gray-800 font-semibold">${enun || 'Enunciado no disponible'}</p>
              ${contexto ? `<p class="text-gray-600 text-sm mt-2">${contexto}</p>` : ''}
              ${nota ? `<p class="text-amber-700 text-xs mt-2">${nota}</p>` : ''}
            </div>

            <!-- Alternativas Interactivas -->
            <div class="mt-6 pt-4 border-t border-gray-100">
              <p class="text-sm text-gray-500 mb-3 font-medium">Selecciona tu respuesta:</p>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                ${['A', 'B', 'C', 'D'].map(opt => `
                  <button onclick="seleccionarAlternativa(${q.numero}, '${opt}')" 
                          id="btn-${q.numero}-${opt}"
                          class="w-full text-left px-4 py-3 rounded-lg border border-gray-200 hover:bg-purple-50 hover:border-purple-300 transition-all flex items-center group">
                    <span class="w-8 h-8 rounded-full bg-gray-100 text-gray-600 flex items-center justify-center font-bold mr-3 group-hover:bg-purple-200 group-hover:text-purple-700 transition-colors">${opt}</span>
                    <span class="text-gray-700 font-medium">Opción ${opt}</span>
                  </button>
                `).join('')}
              </div>
            </div>

          </div>
        </div>`;
    }).join('\n');

    cont.innerHTML = cards;
  }

  function seleccionarAlternativa(num, opt) {
    // Deseleccionar todos en esta pregunta
    ['A', 'B', 'C', 'D'].forEach(l => {
      const btn = document.getElementById(`btn-${num}-${l}`);
      if(btn) {
        // Reset container styles
        btn.classList.remove('bg-purple-600', 'border-purple-600', 'ring-2', 'ring-purple-300');
        btn.classList.add('bg-white', 'border-gray-200');
        
        // Reset text color
        const text = btn.querySelector('span:last-child');
        text.classList.remove('text-white');
        text.classList.add('text-gray-700');

        // Reset circle styles
        const circle = btn.querySelector('span:first-child');
        circle.classList.remove('bg-white', 'text-purple-600');
        circle.classList.add('bg-gray-100', 'text-gray-600');
      }
    });

    // Seleccionar el actual
    const sel = document.getElementById(`btn-${num}-${opt}`);
    if(sel) {
      // Active container styles
      sel.classList.remove('bg-white', 'border-gray-200');
      sel.classList.add('bg-purple-600', 'border-purple-600', 'ring-2', 'ring-purple-300');
      
      // Active text color
      const text = sel.querySelector('span:last-child');
      text.classList.remove('text-gray-700');
      text.classList.add('text-white');

      // Active circle styles
      const circle = sel.querySelector('span:first-child');
      circle.classList.remove('bg-gray-100', 'text-gray-600');
      circle.classList.add('bg-white', 'text-purple-600');
    }
  }

  cargarPreguntas();
</script>
