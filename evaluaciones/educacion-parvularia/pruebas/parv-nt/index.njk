// Función para mostrar resultado final
function mostrarResultadoFinal() {
  if (quizState.respondidas.size === 50) {
    const percentage = (quizState.correctas / 50) * 100;
    const mensaje = `
      <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" id="resultado-modal">
        <div class="bg-white rounded-xl p-8 max-w-md shadow-2xl">
          <h3 class="text-2xl font-bold mb-4 text-center">🎉 ¡Quiz Completado!</h3>
          <p class="text-4xl font-bold text-center mb-4 ${percentage >= 60 ? 'text-green-600' : 'text-orange-600'}">
            ${quizState.correctas}/50
          </p>
          <p class="text-xl text-center mb-6">${percentage.toFixed(1)}%</p>
          <div class="text-center">
            ${percentage >= 80 ? '🌟 ¡Excelente!' : percentage >= 60 ? '👍 Buen trabajo' : '📚 Sigue estudiando'}
          </div>
          <button onclick="document.getElementById('resultado-modal').remove()" class="mt-6 w-full bg-pink-600 text-white py-3 rounded-lg font-semibold hover:bg-pink-700">
            Cerrar
          </button>
        </div>
      </div>
    `;
    document.body.insertAdjacentHTML('beforeend', mensaje);
  }
}

// Detectar cuando se completan todas las preguntas
setInterval(() => {
  if (quizState.respondidas.size === 50 && !document.getElementById('resultado-modal')) {
    mostrarResultadoFinal();
  }
}, 1000);

