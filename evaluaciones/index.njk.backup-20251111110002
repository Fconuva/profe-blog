<script>
// Wait for Firebase to be loaded
document.addEventListener('DOMContentLoaded', function() {
    // Verify Firebase is available
    if (typeof firebase === 'undefined') {
        console.error('Firebase not loaded!');
        return;
    }

    // Initialize Firebase services
    const auth = firebase.auth();
    const database = firebase.database();

    // Global variables
    let currentUser = null;

    // Start authentication check
    checkAuthentication();
    setupLoginForm();

// Check if user is logged in
function checkAuthentication() {
    const session = localStorage.getItem('evaluaciones_session');
    const loginButton = document.getElementById('login-button');

    if (session) {
        try {
            const sessionData = JSON.parse(session);
            // Check if session is still valid (24 hours)
            const loginTime = new Date(sessionData.loginTime);
            const now = new Date();
            const hoursDiff = (now - loginTime) / (1000 * 60 * 60);

            if (hoursDiff < 24) {
                currentUser = sessionData;
                showUserInterface(sessionData);
                enableContentAccess(sessionData.permissions);
                return;
            } else {
                localStorage.removeItem('evaluaciones_session');
            }
        } catch (error) {
            localStorage.removeItem('evaluaciones_session');
        }
    }

    // Show login button if not authenticated
    if (loginButton) {
        loginButton.style.display = 'block';
    }
    
    // Show all content but disable links (require login to access)
    showAllContentButLockLinks();
}

// Setup login form
function setupLoginForm() {
    const loginForm = document.getElementById('user-login-form');

    loginForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        const username = document.getElementById('login-username').value.trim();
        const password = document.getElementById('login-password').value;

        // Show loading state
        const submitBtn = loginForm.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Verificando...';
        submitBtn.disabled = true;

        try {
            console.log('üîê Attempting login for username:', username);
            
            // Authenticate using anonymous auth to get read access
            let authUser = auth.currentUser;
            if (!authUser) {
                const anonCredential = await auth.signInAnonymously();
                authUser = anonCredential.user;
                console.log('‚úÖ Anonymous auth successful, UID:', authUser.uid);
            }

            // Find user by username in database
            const usersRef = database.ref('users');
            const snapshot = await usersRef.orderByChild('username').equalTo(username).once('value');
            
            console.log('üìä Database query for username:', username);
            console.log('  User exists?', snapshot.exists());
            
            if (!snapshot.exists()) {
                throw new Error('Usuario no encontrado');
            }

            const userId = Object.keys(snapshot.val())[0];
            const userData = snapshot.val()[userId];
            
            console.log('‚úÖ User data loaded:', userData);

            // Check if user is active
            if (userData.active === false) {
                throw new Error('Cuenta deshabilitada');
            }

            // Verify password (stored in Base64)
            let storedPassword;
            try {
                storedPassword = atob(userData.password);
            } catch (decodeError) {
                console.error('‚ùå Password decode error:', decodeError);
                throw new Error('Cuenta corrupta. Contacta al administrador para restablecer tu contrase√±a.');
            }
            
            if (storedPassword !== password) {
                throw new Error('Contrase√±a incorrecta');
            }

            console.log('‚úÖ Password verified!');

            // Create session
            const sessionData = {
                userId: userId,
                username: userData.username,
                permissions: userData.permissions,
                role: userData.role,
                loginTime: new Date().toISOString()
            };

            localStorage.setItem('evaluaciones_session', JSON.stringify(sessionData));
            currentUser = sessionData;

            console.log('‚úÖ Session created:', sessionData);

            // Close modal and show user interface
            closeLoginModal();
            showUserInterface(sessionData);
            enableContentAccess(sessionData.permissions);

        } catch (error) {
            console.error('‚ùå Login error:', error);
            let errorMessage = 'Error al iniciar sesi√≥n';
            
            if (error.message) {
                errorMessage = error.message;
            }
            
            alert(errorMessage);
        } finally {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        }
    });
}

// Show login modal
function showLoginModal() {
    const modal = document.getElementById('login-modal');
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

// Close login modal
function closeLoginModal() {
    const modal = document.getElementById('login-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';

    // Clear form
    const form = document.getElementById('user-login-form');
    form.reset();
}

// Show user interface
function showUserInterface(userData) {
    const loginButton = document.getElementById('login-button');
    const userInfo = document.getElementById('user-info');
    const userName = document.getElementById('user-name');

    if (loginButton) loginButton.style.display = 'none';
    if (userInfo) userInfo.classList.remove('hidden');
    if (userName) userName.textContent = userData.username;
}

// Show all content but lock links (require login)
function showAllContentButLockLinks() {
    const contentSections = [
        { id: 'educacion-basica-section', permission: 'basica' },
        { id: 'matematica-section', permission: 'basica' },
        { id: 'religion-section', permission: 'basica' },
        { id: 'basica-generalista-section', permission: 'basica' },
        { id: 'educacion-media-matematica-section', permission: 'media' },
        { id: 'educacion-parvularia-section', permission: 'parvularia' },
        { id: 'educacion-especial-section', permission: 'especial' },
        { id: 'educacion-media-historia-section', permission: 'media' },
        { id: 'educacion-media-ciencias-section', permission: 'media' },
        { id: 'educacion-media-literatura-section', permission: 'media' },
        { id: 'educacion-media-tecnico-section', permission: 'tecnico_profesional' },
        { id: 'lengua-indigena-section', permission: 'indigena' }
    ];

    // Show all sections
    contentSections.forEach(section => {
        const element = document.getElementById(section.id);
        if (element) {
            element.style.display = 'block';
            
            // Lock all links in this section
            const links = element.querySelectorAll('a[href^="/evaluaciones"]');
            links.forEach(link => {
                link.style.opacity = '0.6';
                link.style.cursor = 'not-allowed';
                link.style.pointerEvents = 'none';
                
                // Add overlay to show login required
                const parent = link.parentElement;
                if (!parent.querySelector('.login-overlay')) {
                    const overlay = document.createElement('div');
                    overlay.className = 'login-overlay absolute inset-0 bg-black/10 backdrop-blur-[1px] flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity rounded-xl';
                    overlay.innerHTML = '<span class="bg-white px-4 py-2 rounded-lg shadow-lg text-sm font-semibold text-indigo-600"><i class="fas fa-lock mr-2"></i>Inicia sesi√≥n para acceder</span>';
                    overlay.style.position = 'absolute';
                    overlay.style.top = '0';
                    overlay.style.left = '0';
                    overlay.style.right = '0';
                    overlay.style.bottom = '0';
                    overlay.style.zIndex = '10';
                    
                    parent.style.position = 'relative';
                    parent.appendChild(overlay);
                }
            });
        }
    });
}

// Enable content access for logged-in users
function enableContentAccess(permissions) {
    console.log('üîì enableContentAccess called with permissions:', permissions);
    
    const contentSections = [
        { id: 'educacion-basica-section', permission: 'basica' },
        { id: 'matematica-section', permission: 'basica' },
        { id: 'religion-section', permission: 'basica' },
        { id: 'basica-generalista-section', permission: 'basica' },
        { id: 'educacion-media-matematica-section', permission: 'media' },
        { id: 'educacion-parvularia-section', permission: 'parvularia' },
        { id: 'educacion-especial-section', permission: 'especial' },
        { id: 'educacion-media-historia-section', permission: 'media' },
        { id: 'educacion-media-ciencias-section', permission: 'media' },
        { id: 'educacion-media-literatura-section', permission: 'media' },
        { id: 'educacion-media-tecnico-section', permission: 'tecnico_profesional' },
        { id: 'lengua-indigena-section', permission: 'indigena' }
    ];

    contentSections.forEach(section => {
        const element = document.getElementById(section.id);
        if (element) {
            // Check if user has permission for this section
            const hasPermission = permissions && permissions[section.permission];
            console.log(`  Section ${section.id}: permission=${section.permission}, hasPermission=${hasPermission}`);
            
            if (hasPermission) {
                // Show section and enable links
                element.style.display = 'block';
                
                const links = element.querySelectorAll('a[href^="/evaluaciones"]');
                links.forEach(link => {
                    link.style.opacity = '1';
                    link.style.cursor = 'pointer';
                    link.style.pointerEvents = 'auto';
                });
                
                // Remove login overlays
                const overlays = element.querySelectorAll('.login-overlay');
                overlays.forEach(overlay => overlay.remove());
                
                console.log(`  ‚úÖ ${section.id} - SHOWN`);
            } else {
                // Hide sections user doesn't have permission for
                element.style.display = 'none';
                console.log(`  ‚ùå ${section.id} - HIDDEN`);
            }
        }
    });
}

    // Logout
    function logout() {
        localStorage.removeItem('evaluaciones_session');
        currentUser = null;
        location.reload();
    }

    // Make logout available globally
    window.logout = logout;
    window.showLoginModal = showLoginModal;
    window.closeLoginModal = closeLoginModal;

}); // End DOMContentLoaded
</script>
