{
  "rules": {
    "sindicato_evento_aniversario": {
      ".read": true,
      ".write": true
    },
    "analytics": {
      ".read": true,
      ".write": true
    },
    "evento_sindicato_inscripciones": {
      ".read": true,
      ".write": true,
      ".indexOn": ["rut", "email", "sede"]
    },
    "asistentes": {
      ".read": true,
      ".write": true
    },
    "paseo_docentes": {
      ".read": true,
      ".write": true
    },
    "users": {
      ".read": true,
      ".write": true,
      ".indexOn": ["username"]
    },
    "courses": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "courseName", "period"]
    },
    "reservations": {
      ".read": true,
      ".write": true,
      ".indexOn": ["event_date", "attendee_rut"]
    },
    "logs": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp", "userId", "action"]
    },
    "admin": {
      "settings": {
        ".read": true,
        ".write": true
      },
      "sessions": {
        ".read": true,
        ".write": true,
        ".indexOn": ["userId", "deviceId", "timestamp"]
      }
    },
    "devices": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "deviceId", "lastAccess"]
    }
  }
}
