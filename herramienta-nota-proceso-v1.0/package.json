{
  "name": "herramienta-nota-proceso",
  "version": "1.0.0",
  "description": "Herramienta profesional para registro de notas de proceso y pautas de cotejo",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:icons && npm run build:manifest",
    "build:icons": "node scripts/generate-icons.js",
    "build:manifest": "node scripts/update-manifest.js",
    "install-app": "node installer.js"
  },
  "keywords": [
    "educacion",
    "evaluacion",
    "notas",
    "proceso",
    "pauta",
    "cotejo",
    "pwa"
  ],
  "author": "Herramienta Educativa",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sharp": "^0.33.0",
    "fs-extra": "^11.2.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
